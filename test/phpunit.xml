<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" strict="true"
         timeoutForSmallTests="15"
         timeoutForMediumTests="15"
         timeoutForLargeTests="60">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <file>../src/AbstractQueueTransport.php</file>
            <file>../src/FileDBQueueTransport.php</file>
            <file>../src/Queue.php</file>
            <file>../src/QueueFactory.php</file>
            <file>../src/SmallFilesQueueTransport.php</file>
        </whitelist>
        <blacklist>
            <directory suffix=".php">../vendor</directory>
            <file>../src/phpdoc.php</file>
            <file>../src/QueueException.php</file>
            <file>../src/QueueTransport.php</file>
        </blacklist>
    </filter>
</phpunit>